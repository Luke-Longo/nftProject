{
	"ts-node": {
		// these options are overrides used only by ts-node
		"compilerOptions": {
			"module": "node16",
			"target": "es2017"
		}
	},
	"compilerOptions": {
		"target": "es2017",
		"lib": ["es6"],
		"module": "es2022",
		"moduleResolution": "node",
		"rootDir": "src",
		"resolveJsonModule": true,
		"allowJs": true,
		"outDir": "build",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
